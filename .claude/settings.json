{
  "hooks": {
    "OnError": {
      "command": "python",
      "args": [".claude/hooks/on_error.py"],
      "timeout": 5000
    },
    "OnSuccess": {
      "command": "python",
      "args": [".claude/hooks/on_success.py"],
      "timeout": 5000
    }
  },
  "mcpServers": {
    "bigquery": {
      "command": "uvx",
      "args": ["mcp-server-bigquery"],
      "env": {
        "GOOGLE_APPLICATION_CREDENTIALS": "${GOOGLE_APPLICATION_CREDENTIALS}"
      }
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "${PWD}"]
    }
  },
  "allowedTools": [
    "Bash",
    "Read",
    "Write",
    "Edit",
    "Grep",
    "Glob",
    "CopyFile",
    "MoveFile",
    "DeleteFile",
    "ListDir"
  ],
  "model": "claude-sonnet-4-6",
  "environmentVariables": {
    "GOOGLE_APPLICATION_CREDENTIALS": "${HOME}/.gcp/sponsorgraph-sa.json",
    "GITHUB_TOKEN": "${GITHUB_TOKEN}",
    "ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}",
    "PYTHONPATH": "${PWD}/backend"
  },
  "shellInit": {
    "bash": [
      "alias api-dev='PYTHONPATH=backend uvicorn api.main:app --reload'",
      "alias test-all='PYTHONPATH=backend pytest backend/tests/ -v'",
      "alias fe-dev='cd frontend && npm run dev'"
    ]
  },
  "costWarnings": {
    "enabled": true,
    "thresholds": {
      "tokenWarning": 100000,
      "tokenLimit": 180000
    }
  }
}

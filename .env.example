# ─── Application ─────────────────────────────────────────────────────────
APP_NAME=ShelfOps
DEBUG=true

# ─── Database ────────────────────────────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://shelfops:dev_password@localhost:5432/shelfops

# ─── Redis ───────────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ─── Auth (Auth0) ────────────────────────────────────────────────────────
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_AUDIENCE=https://api.shelfops.com
JWT_SECRET=change-this-in-production
JWT_ALGORITHM=HS256

# ─── Square POS Integration ─────────────────────────────────────────────
SQUARE_CLIENT_ID=your-square-client-id
SQUARE_CLIENT_SECRET=your-square-client-secret
SQUARE_WEBHOOK_SECRET=your-square-webhook-secret
SQUARE_ENVIRONMENT=sandbox

# ─── Shopify Integration ────────────────────────────────────────────────
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=

# ─── Email (SendGrid) ───────────────────────────────────────────────────
SENDGRID_API_KEY=your-sendgrid-api-key
ALERT_FROM_EMAIL=alerts@shelfops.com

# ─── GCP ─────────────────────────────────────────────────────────────────
GCP_PROJECT_ID=your-gcp-project-id
VERTEX_AI_REGION=us-central1

# ─── Security ───────────────────────────────────────────────────────────
ENCRYPTION_KEY=your-32-byte-base64-fernet-key

# ─── CORS ────────────────────────────────────────────────────────────────
CORS_ORIGINS=["http://localhost:3000"]
